<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/img_srcImage"
            android:layout_width="130dp"
            android:layout_height="130dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_foodname"
                    android:textColor="#25A3DC"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Hambeger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/btn_food_edit"
                    android:layout_marginLeft="100dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/ic_baseline_create_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/btn_food_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/ic_baseline_delete_24" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_fooddescription"
                android:maxLines="3"
                android:textSize="16dp"
                android:text="Đây là món ăn dân dã của người việt nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:id="@+id/food_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="Giá sản phẩm :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/food_price"
                    android:textColor="#D82929"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:text="20.000 VNĐ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>